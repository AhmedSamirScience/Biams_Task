<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Primary color used for the tab background -->
        <item name="colorPrimary">@color/black</item>

        <!-- Tab indicator color (underline) -->
        <item name="tabIndicatorColor">@color/black</item>

        <!-- Default background color for all screens -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- **********************************************  Text Fonts  ********************************************** -->
    <style name="TextAppearance.MyApp.Thin" parent="Base.Theme.MyApplication">
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Text Regular -->
    <style name="TextAppearance.MyApp.Regular" parent="Base.Theme.MyApplication">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Text Light -->
    <style name="TextAppearance.MyApp.Light" parent="Base.Theme.MyApplication">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Text Medium -->
    <style name="TextAppearance.MyApp.Medium" parent="Base.Theme.MyApplication">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Text Bold -->
    <style name="TextAppearance.MyApp.Bold" parent="Base.Theme.MyApplication">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <!-- ****************************************************************************************************** -->


    <!-- **********************************************  Custom Alert Dialog  ********************************************** -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shape_rounded_spinner_crn2</item>
    </style>
    <!-- ****************************************************************************************************** -->


    <!-- **********************************************  Button Style  ********************************************** -->
    <style name="style_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/themes_selector_btn_maincolorredblackanddark</item>

        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- ****************************************************************************************************** -->

</resources>